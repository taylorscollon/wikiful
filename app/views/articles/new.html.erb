<h1>This is the new view for articles</h1>
<% if @article.errors.any? %>
  <div class="error_messages">
    <h2>You are missing some fields</h2>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= render :partial => 'form' %>