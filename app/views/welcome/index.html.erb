<h1>Welcome to Wikiful</h1>
<p>Here are some recent articles</p>
<% @latest_articles.each do |article| %>
  <div class="article-excerpt">
    <h3><%= link_to article.title, article %></h3>
    <p>Published on <%= article.created_at.strftime('%b %d, %Y')%></p>
    <p>Filed under: <% article.categories.each do |category| %>
      <%= category.name %>&nbsp;
      <% end %>
    </p>
    <p><%= truncate(article.content, length: 100) %></p>

  </div>
<% end %>
<hr>
<%= link_to 'Create new article', new_article_path %>